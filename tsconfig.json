{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"paths": { "@/*": ["src/*"], "~/*": ["src/*"] },
		"plugins": [{ "name": "ts-vue-plugin" }],
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"target": "es2017"
	},
	"exclude": ["platforms"],
	"include": ["node_modules/@nativescript/types-android/lib/android", "types", "src"]
}
