{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"paths": { "~/*": ["src/*"] },
		"skipLibCheck": true,
		"target": "es2017"
	},
	"exclude": ["platforms"],
	"include": [
		"node_modules/svelte/types/**/*.d.ts",
		"node_modules/@nativescript/types-android/lib/android-29.d.ts",
		"types/**/*.d.ts",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.svelte"
	]
}
