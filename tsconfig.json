{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"paths": { "@/*": ["app/*"], "~/*": ["src/*"] },
		"plugins": [{ "name": "ts-vue-plugin" }],
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"exclude": ["platforms"],
	"include": [
		"node_modules/@nativescript/types-android/lib/android/*.d.ts",
		"types/**/*.d.ts",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.vue"
	]
}
